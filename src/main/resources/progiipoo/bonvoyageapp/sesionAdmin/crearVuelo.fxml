                  <TextField fx:id="txtCiudadDestino" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                  <TextField fx:id="txtPrecio" GridPane.columnIndex="1" GridPane.rowIndex="7" />
                  <DatePicker fx:id="dateVuelo" prefHeight="25.0" prefWidth="654.0" GridPane.columnIndex="1" GridPane.rowIndex="6" />
               </children>
            </GridPane>
            <HBox alignment="CENTER" maxWidth="900.0" prefHeight="100.0" prefWidth="900.0" spacing="300.0">
               <children>
                  <Button fx:id="btnCancelar" mnemonicParsing="false" onAction="#onCancelarClick" prefHeight="30.0" prefWidth="200.0" text="Cancelar" />
                  <Button fx:id="btinConfirmarVuelo" mnemonicParsing="false" onAction="#onConfirmarVueloClick" prefHeight="30.0" prefWidth="200.0" text="Confirmar vuelo" />
               </children>
