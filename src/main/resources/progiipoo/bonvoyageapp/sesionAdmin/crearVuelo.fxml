                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="Pais de Origen" />
                  <Label text="Provincia de Origen" GridPane.rowIndex="1" />
                  <Label text="Ciudad de Origen" GridPane.rowIndex="2" />
                  <Label text="Pais de Destino" GridPane.rowIndex="3" />
                  <Label text="Provincia de Destino" GridPane.rowIndex="4" />
