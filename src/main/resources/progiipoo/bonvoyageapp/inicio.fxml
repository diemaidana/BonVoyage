<AnchorPane prefHeight="700.0" prefWidth="400.0" style="-fx-background-color: linear-gradient(to bottom, #e8dbcb, #FFFFF1);" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="progiipoo.bonvoyageapp.controller.InicioController">
   <children>
      <GridPane layoutY="7.0" prefHeight="590.0" prefWidth="400.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="408.0" minHeight="10.0" prefHeight="355.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="295.0" minHeight="10.0" prefHeight="245.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <GridPane GridPane.rowIndex="1">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Hyperlink fx:id="hlkOlvidoPassword" ellipsisString="" graphicTextGap="0.0" onAction="#onOlvidoPasswordClick" pickOnBounds="false" text="Olvido su contraseña?" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
                  <Button fx:id="btnIniciarSesion" mnemonicParsing="false" onAction="#onIniciarSesionClick" prefWidth="200.0" text="Iniciar Sesion" GridPane.halignment="CENTER" GridPane.rowIndex="4" />
                  <Button fx:id="btnRegistrarse" mnemonicParsing="false" onAction="#onRegistrarseClick" prefWidth="200.0" text="Registrarse" GridPane.halignment="CENTER" GridPane.rowIndex="5" />
                  <TextField fx:id="txtUsuario" maxWidth="200.0" minWidth="200.0" prefWidth="200.0" promptText="Ingresar usuario..." GridPane.halignment="CENTER" GridPane.rowIndex="1" />
                  <Label text="Bienvenido!" GridPane.halignment="CENTER">
                     <font>
                        <Font name="System Bold" size="31.0" />
                     </font>
                  </Label>
                  <PasswordField fx:id="txtPassword" maxWidth="200.0" minWidth="200.0" prefWidth="200.0" promptText="Ingresar contraseña..." GridPane.halignment="CENTER" GridPane.rowIndex="2" />
               </children>
            </GridPane>
            <ImageView fitHeight="300.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true" GridPane.halignment="CENTER">
               <image>
                  <Image url="@../../images/Bon%20Voyage%20Sin%20Fondo.png" />
               </image>
            </ImageView>
         </children>
      </GridPane>
   </children>
</AnchorPane>
